{
    "name": "desktop",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "tauri:build": "tauri build",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:perf": "playwright test tests/performance",
        "test:perf:report": "node scripts/run-performance-tests.js --generate-report",
        "test:perf:lighthouse": "node scripts/run-performance-tests.js --lighthouse",
        "test:perf:cold": "playwright test tests/performance --grep=\"cold\"",
        "test:perf:warm": "playwright test tests/performance --grep=\"warm\"",
        "test:perf:baseline": "node scripts/run-performance-tests.js --save-baseline",
        "test:performance": "vitest run tests/performance",
        "test:performance:watch": "vitest watch tests/performance",
        "test:visual": "bash scripts/run-visual-tests.sh",
        "test:visual:update": "bash scripts/run-visual-tests.sh --update-baselines",
        "test:visual:mockups": "bash scripts/run-visual-tests.sh --compare-mockups",
        "test:visual:report": "bash scripts/run-visual-tests.sh --generate-report",
        "test:cross-browser": "playwright test",
        "test:cross-browser:chrome": "playwright test --project=visual-chrome",
        "test:cross-browser:firefox": "playwright test --project=cross-browser-firefox",
        "test:cross-browser:edge": "playwright test --project=cross-browser-edge",
        "test:cross-browser:safari": "playwright test --project=cross-browser-safari",
        "test:cross-browser:ui": "playwright test --ui",
        "test:cross-browser:report": "playwright show-report",
        "test:a11y": "playwright test --project=accessibility-chrome",
        "test:a11y:report": "playwright show-report test-results/html",
        "test:a11y:pa11y": "pa11y-ci --config .pa11yci.json",
        "test:all": "bash scripts/run-all-tests.sh",
        "test:report": "node scripts/generate-report.js",
        "test:summary": "bash scripts/run-all-tests.sh --summary-only"
    },
    "dependencies": {
        "axios": "^1.13.5",
        "lucide-vue-next": "^0.561.0",
        "pinia": "^3.0.4",
        "vue": "^3.5.24",
        "vue-router": "^4.6.4"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@playwright/test": "^1.49.1",
        "@tauri-apps/api": "^2.9.1",
        "@tauri-apps/cli": "^2.9.6",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/ui": "^4.0.18",
        "@vue/tsconfig": "^0.8.1",
        "autoprefixer": "^10.4.16",
        "lighthouse": "^12.8.2",
        "pa11y-ci": "^4.0.1",
        "pixelmatch": "^5.3.0",
        "pngjs": "^7.0.0",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "typescript": "~5.9.3",
        "vite": "^7.2.4",
        "vue-tsc": "^3.1.4",
        "web-vitals": "^5.1.0"
    },
    "overrides": {
        "basic-ftp": ">=5.2.0"
    }
}
